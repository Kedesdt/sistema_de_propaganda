# Configurações do Servidor Flask
SECRET_KEY=seu-secret-key-super-secreto-aqui
PORT=5050

# Banco de Dados
DATABASE_URI=sqlite:///propaganda.db
# Para PostgreSQL: postgresql://usuario:senha@localhost/propaganda
# Para MySQL: mysql://usuario:senha@localhost/propaganda

# Autenticação Admin
ADMIN_PASSWORD=admin123

# Upload de Arquivos
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=524288000  # 500 MB em bytes

# Ambiente
FLASK_ENV=development
# Para produção: production
FLASK_DEBUG=1
# Para produção: 0
